% Dirac delta function
\makeatletter % (for use of @ below)
\newcommand{\Diracdelta}[1][\@nil]{%
\def\tmp{#1}%
    \ifx\tmp\@nnil
        \ensuremath{\text{\textdelta}}
    \else
        \ensuremath{\text{\textdelta}(#1)}
    \fi}
\makeatother

% Kronecker delta symbol
\makeatletter % (for use of @ below)
\newcommand{\Krondelta}[1][\@nil]{%
\def\tmp{#1}%
    \ifx\tmp\@nnil
        \ensuremath{\text{\textdelta}}
    \else
        \ensuremath{\text{\textdelta}\indices{#1}}
    \fi}
\makeatother

% Heaviside step function
\makeatletter % (for use of @ below)
\newcommand{\Heaviside}[1][\@nil]{%
\def\tmp{#1}%
    \ifx\tmp\@nnil
        \ensuremath{\text{\textTheta}}
    \else
        \ensuremath{\text{\textTheta}(#1)}
    \fi}
\makeatother






